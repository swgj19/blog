<div class="login-box mt-6">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>
  
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="user-box">
        <%= f.text_field :username, autofocus: true, placeholder: "username" %>
      </div>
      <div class="user-box">
        <%= f.text_field :email, required: true, autofocus: true, placeholder: "email" %>
      </div>

      <%= image_tag(resource.avatar_thumbnail) if resource.avatar.attached? %>
      <%= f.file_field :avatar %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
      <div class="user-box">
        <%= f.text_field :password,
                    hint: "leave it blank if you don't want to change it",
                    required: false,
                    placeholder: "password",
                    input_html: { autocomplete: "new-password" } %>
      </div>
      <div class="user-box">
        <%= f.text_field :password_confirmation,
                    required: false,
                    placeholder: "confirm password",
                    input_html: { autocomplete: "new-password" } %>
      </div>
      <div class="user-box">
        <p>Enter current password to confirm your changes</p>
        <%= f.text_field :current_password,
                    hint: "we need your current password to confirm your changes",
                    required: true,
                    placeholder: "current password",
                    input_html: { autocomplete: "current-password" } %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Update", class: "button is-dark is-normal is-fullwidth mt-3" %>
    </div>
  <% end %>

  <h3 class="has-text-centered mt-5 mb-3">Not happy?</h3>
  <div class="column is-centered">
    <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "mr-3 button is-danger" %>
    <%= link_to "Back", :back, class: "ml-3 button is-light" %>
  </div>

</div>
<div class="login-box mt-6">
  <h2>Sign in</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= f.error_notification %>

    <div class="form-inputs">
      <div class="user-box">
        <%= f.text_field :login, autofocus: true, placeholder: "email or username" %>
      </div>
      <div class="user-box">
        <%= f.text_field :password,
                required: false,
                placeholder: "password",
                input_html: { autocomplete: "current-password" } %>
      </div>
    </div>

    <%= f.label :remember_me, class: "checkbox" do %>
    <%= f.check_box :remember_me, as: :boolean if devise_mapping.rememberable? %>
    <span>remember me</span>
    <% end %>
      
    <div class="form-actions">
      <%= f.button :submit, "Sign in", class: "button is-dark is-normal is-fullwidth mt-3" %>
    </div>
  <% end %>
</div>
<div class="mt-1 columns is-centered has-text-centered">
  <%= render "devise/shared/links" %>
</div>